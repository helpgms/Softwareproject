<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiaryEntryActivity">

    <ImageView
        android:id="@+id/diaryImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="일기 이미지"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/diaryEditText"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:hint="일기 내용을 입력하세요"
        android:inputType="textMultiLine"
        android:minHeight="200dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/diaryImageView" />

    <Button
        android:id="@+id/saveDiaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일기 저장하기"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>